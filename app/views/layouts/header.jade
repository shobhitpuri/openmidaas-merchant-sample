-@ val assets:String

.masthead
  .row
    .span3.logo
      h3.muted Greg's T-Shirts
    .span8
      .row
        .span1 &nbsp;
        .span3
          h4 Mobile Checkout Enabled
          .row
            .span6
              img.icon(src={ assets + "images/androidmarket_grey.jpg" })
              img.icon(src={ assets + "images/appstore_grey.jpg" })
        .span2.pull-right
          h4 Shopping Cart
          .row
            .cart.span2.pull-left
              i.icon-shopping-cart(style="margin-right: 7px;") 
              span.simpleCart_quantity 
              | items
              span.simpleCart_total
            i.icon-remove-sign.simpleCart_empty.pull-right
          .row.cart-detail.hide
            .simpleCart_items
          .row.checkout-row
            .btn-group.pull-right
              a.btn.btn-success.dropdown-toggle(data-toggle="dropdown" href="#") Checkout
              ul.dropdown-menu.pull-right
                li 
                  div#checkout
                li
                  a.simpleCart_checkout Submit
