  :javascript
    $(document).ready(function() {    
      $('#checkout').hide();
      $('#mobile-progress').hide();
      $('#mobile-pop').dialog({
        autoOpen: false,
        resizable: false,
        height: 270,
        width: 400,
        modal: true,
        title: "Mobile ID Login",
        buttons: {
          "Send": function() {
            $('#mobile-progressbar').progressbar({
              value: false
            });
            $('#mobile-no').hide();
            $('#mobile-progress').show();
            gregsts.pingMobileID();
          },
          Cancel: function() {
            $( this ).dialog( "close" );
          }
        },
        close: function() {
          $('#mobile-no').show();
          $('#mobile-progress').hide();
          $('#mobile-progress .alturl').empty().append('Contacting Mobile...')
          if ( $("#mobile-progressbar").is(":data(progressbar)") ) {
            $('#mobile-progressbar').progressbar('option', 'value', false)
            $('#mobile-progressbar .ui-progressbar-value').css({ 'background' : '#ccc'});
          }
        }
      });
      $('#mobile').click( function() {
        $('#mobile-pop').dialog( "open" );
      });
    });

body
  div.container.boxed
    - render("layouts/header.jade", Map("assets" -> assets))
    != body
    - render("layouts/footer.jade", Map("assets" -> assets))
    #mobile-pop
      p Please enter your Mobile-ID phone number
      p(style="color:red;") Your number will not be shared with the site without your permission
      form#mobile-form
        input#mobile-url(type="hidden" name="url" value="")
        input#mobile-no(type="text" placeholder="mobile number" name="number")
        #mobile-progress
          #mobile-progressbar
          .alturl Contacting Mobile...

:javascript
  $(".cart").click( function() {
    if ( $(".cart-detail").is(":hidden") && (simpleCart.quantity() > 0)) {
      $(".cart-detail").show();
    }
    else {
      $(".cart-detail").hide();
    }
    return false;
  });

  $("#checkout-btn").click( function() {
    if ( $("#checkout").is(":hidden")) {
      gregsts.displayCheckout();
    }
    else {
      gregsts.hideCheckout();
    }
    return false
  });

  $('body').click( function() {      
    if ($("#checkout").is(":visible")) {
      gregsts.hideCheckout();
    }
  });
  
  $(window).onbeforeunload = function() {
  	gregsts.ignore();
  };
